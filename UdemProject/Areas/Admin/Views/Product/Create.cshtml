@using UdemProject.Data
@model ProductVM

<form method="post">
    <div class="card border-primary p-3 mt-4 rounded">
        <div class="row pb-2">
            <h2 class="text-dark">Create New Product</h2>
            <hr/>
        </div>
        <div class="md-3 row p-1">
            <label asp-for="Product.Title"></label>
            <input asp-for="Product.Title" type="text" class="form-control" placeholder="Write title" id="inputDefault">
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>
        <div class="md-3 row p-1">
            <label asp-for="Product.Description"></label>
            <input asp-for="Product.Description" type="text" class="form-control" placeholder="Write Description" id="inputDefault">
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
        <div class="md-3 row p-1">
            <label asp-for="Product.Author"></label>
            <input asp-for="Product.Author" type="text" class="form-control" placeholder="Write Author" id="inputDefault">
            <span asp-validation-for="Product.Author" class="text-danger"></span>
        </div>
        <div class="md-3 row p-1">
            <label asp-for="Product.ISBN"></label>
            <input asp-for="Product.ISBN" type="text" class="form-control" placeholder="Write Price100" id="inputDefault">
            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
        </div>
        <div class="md-3 row p-1">
            <label asp-for="Product.Price"></label>
            <input asp-for="Product.Price" type="text" class="form-control" placeholder="Write Price" id="inputDefault">
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
        <div class="md-3 row p-1">
            <label asp-for="Product.ListPrice"></label>
            <input asp-for="Product.ListPrice" type="text" class="form-control" placeholder="Write ListPrice" id="inputDefault">
            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
        </div>
        <div class="md-3 row p-1">
            <label asp-for="Product.Price50"></label>
            <input asp-for="Product.Price50" type="text" class="form-control" placeholder="Write Price50" id="inputDefault">
            <span asp-validation-for="Product.Price50" class="text-danger"></span>
        </div>
        <div class="md-3 row p-1">
            <label asp-for="Product.Price100"></label>
            <input asp-for="Product.Price100" type="text" class="form-control" placeholder="Write Price100" id="inputDefault">
            <span asp-validation-for="Product.Price100" class="text-danger"></span>
        </div>
        <div class="from-floating py-2 col-12">
            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.Category" class="form-select border-0 shadow">
                <option disabled selected>Choose Category</option>
            </select>
            <label asp-for="@Model.Product.CategoryId" class="ms-2"></label>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>
         <div class="md-3 row p-1">
             <label asp-for="Product.ImageUrl"></label>
             <input asp-for="Product.ImageUrl" type="text" class="form-control" placeholder="Write ImageUrl" id="inputDefault">
             <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
         </div>
        <div class="row mt-1">
            <div class="col-6 col-md-2">
                <button type="submit" class="btn btn-outline-success form-control" style="width:150px">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-dark form-control" style="width:150px">Back</a>
            </div>
        </div>
    </div>
</form>
