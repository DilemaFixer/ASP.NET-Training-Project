@using UdemProject.Data
@model Category

<form method="post">
    <div class="card border-primary p-3 mt-4 rounded">
        <div class="row pb-2">
            <h2 class="text-dark">Create New Category</h2>
            <hr />
        </div>
        <div class="md-3 row p-1">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Write name" id="inputDefault">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="md-3 row p-1">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" type="text" class="form-control" placeholder="Write display order" id="inputDefault">
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row mt-1">
            <div class="col-6 col-md-2">
                <button type="submit" class="btn btn-dark form-control" style="width:150px">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-dark form-control" style="width:150px">Back</a>
            </div>
        </div>
    </div>
</form>
